{
  "name": "functions",
  "scripts": {
    "lint": "eslint 'src/**/*.{js,ts}'",
    "build": "npm run lint && tsc",
    "serve": "npm run build && GOOGLE_APPLICATION_CREDENTIALS=./src/mangarel-demo-firebase-adminsdk.json firebase serve --only functions",
    "shell": "npm run build && GOOGLE_APPLICATION_CREDENTIALS=./src/mangarel-demo-firebase-adminsdk.json firebase functions:shell",
    "start": "npm run shell",
    "test": "jest",
    "deploy": "firebase deploy --only functions",
    "dbreset": "firebase firestore:delete --all-collections",
    "dbreset:authors": "firebase firestore:delete -y --shallow authors",
    "dbreset:books": "firebase firestore:delete -y --shallow books",
    "dbreset:feedMemos": "firebase firestore:delete -y --shallow feedMemos",
    "dbreset:publishers": "firebase firestore:delete -y --shallow publishers",
    "dbseed": "npm run dbseed:publishers",
    "dbseed:publishers": "node lib/commands/dbseed.js publishers seeds/publishers.tsv",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "commander": "^3.0.1",
    "csv-parse": "^4.4.5",
    "date-fns": "^2.2.1",
    "date-fns-timezone": "^0.1.4",
    "firebase": "^6.6.1",
    "firebase-admin": "^8.5.0",
    "firebase-functions": "^3.2.0",
    "lodash": "^4.17.15",
    "node-fetch": "^2.6.0",
    "puppeteer": "^1.20.0"
  },
  "devDependencies": {
    "@types/eslint": "^6.1.1",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.138",
    "@types/node": "10.14.18",
    "@types/node-fetch": "^2.5.0",
    "@types/prettier": "^1.18.2",
    "@types/puppeteer": "^1.19.1",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prefer-arrow": "^1.1.6",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts?|js?)$",
    "moduleFileExtensions": [
      "ts",
      "json",
      "js"
    ]
  }
}
